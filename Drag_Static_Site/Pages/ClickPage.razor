@page "/clickMe"
<br/>
<br/>
<MudPaper>
    <MudGrid>
        <MudItem md="5"></MudItem>
        <MudItem md="2">
            <MudButton OnClick="@ClickMe_OnClick">Click Me</MudButton> 
        </MudItem>
        <MudItem md="5"></MudItem>
        <MudItem md="5"></MudItem>
        <MudItem md="2">
            <MudText Typo="Typo.h6" Color="Color.Success" Class="align-center" >@ClickMeString</MudText>
        </MudItem>
        <MudItem md="5"></MudItem>
    </MudGrid>
    <MudGrid>
        @{
            for (int i = 0; i < TimesClicked; i++)
            {
                <MudItem md="2">
                    <MudPaper Elevation="2"><MudButton OnClick="@ClickMe_Remove_Click" >Click Me To Remove Me</MudButton></MudPaper>
                </MudItem>
            }
        }
    </MudGrid>
</MudPaper>

@code {

    public int TimesClicked { get; set; }

    public string ClickMeString => TimesClicked <= 0 ? " " : $"You Clicked Me {TimesClicked} Times!";

    private Task ClickMe_OnClick(MouseEventArgs arg)
    {
        TimesClicked++;
        return Task.CompletedTask;
    }

    private Task ClickMe_Remove_Click(MouseEventArgs arg)
    {
        TimesClicked--;
        return Task.CompletedTask;
    }

}